
#ifdef __linux__


#include "fileSystem.h"

#include <unistd.h>
#include <cstring>
#include <string>
#include <iostream>

using namespace std;


string getExePath() {
	size_t bufSize = 512;
	char path[bufSize];
	memset(path, 0, bufSize);
	readlink("/proc/self/exe", path, bufSize);
	if (path[bufSize -1] != NULL) {
		cerr <<"Path to executable too long: " <<path <<" ...";
		exit(1);
	}
	return string(path);
}


#endif // __linux__
